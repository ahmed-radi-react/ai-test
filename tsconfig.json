{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"], //src
      "~/*": ["*"], //src/components
      "@/layouts/*": ["layouts/*"],
      "@/assets/*": ["assets/*"],
      "@/pages/*": ["pages/*"],
      "@/routes/*": ["routes/*"],
      "@/configs/*": ["configs/*"],
      "@/utils/*": ["utils/*"],
      "@/hooks/*": ["hooks/*"],
      "@/requests-body/*": ["requests-body/*"],
      "@/_helpers/*": ["_helpers/*"],
      "@/context/*": ["context/*"],
      "~/dashboard/*": ["components/dashboard/*"],
      "~/landscreen-onboarding/*": ["components/landscreen-onboarding/*"],
      "~/reusable/*": ["components/reusable/*"],
      "~/types/*": ["components/types/*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
